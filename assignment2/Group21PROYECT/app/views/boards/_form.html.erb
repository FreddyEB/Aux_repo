<div class="container-l" style='margin: 30px'>
        <%= form_with(model: board) do |f| %>
            <div class="form-group mb-3">
                <%= f.label :title %>
                <%= f.text_area :title, class: "form-control", required: true %>
            </div>

            <div class="form-group mb-3">
                <%= f.label :description %>
                <%= f.text_area :description, class: "form-control", required: true %>
            </div>

            <div class="form-group mb-3">
            <% if user_signed_in? %>
                <%= f.hidden_field :user_id, value: current_user.id %>
            <% else %>
                <%= f.label :user_id %>
                <%= f.collection_select :user_id, User.all, :id, :name, {prompt: "Select a creator"}, {class: "form-control"} %>
            <% end %>
            </div>
            <%= f.submit "Submit", class: "btn btn-primary" %>
        <% end %>
</div>
