<div class="container mt-5">
  <h1>Add Users to <%= @team.name %></h1>

  <%= form_with(model: [@team, @team_membership], local: true) do |f| %>
    <div class="form-group">
      <%= f.label :user_id, "Select User" %>
      <%= f.collection_select :user_id, @users, :id, :name, { prompt: "Select a user" }, { class: "form-control" } %>
    </div>
    <p></p>
    <%= f.submit "Add User", class: "btn btn-primary" %>
  <% end %>
  <%= link_to "Back to Teams", teams_path, class: 'btn btn-secondary mt-3' %>
</div>
