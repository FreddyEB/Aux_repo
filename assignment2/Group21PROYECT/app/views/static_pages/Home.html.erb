<div class="container">
  <div class="jumbotron text-center">
    <h1>Welcome to TrelloClone's Homepage</h1>
    <h3 class="lead">Here are the recent boards:</h3>
  </div>
  
  <div class="row">
    <% @recent_boards.each do |board| %>
      <div class="col-md-4">
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= board.title %></h5>
            <p class="card-text"><%= board.description %></p>
            <%= link_to 'View Board', board_path(board), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
