<div class="container-l" style='margin: 30px'>
    <%= form_with(model: @task) do |f| %>
        <div class="form-group mb-3">
            <%= f.label :title %>
            <%= f.text_area :title, class: "form-control", required: true %>
        </div>

        <div class="form-group mb-3">
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control", required: true %>
        </div>

        <div class="form-group mb-3">
            <%= f.label :priority %>
            <%= f.text_area :priority, class: "form-control",placeholder: "LOW : MEDIUM : HIGH", required: true %>
        </div>

        <div class="form-group mb-3">
            <%= f.label :status %>
            <%= f.text_area :status, class: "form-control", required: false %>
        </div>

        <div class="form-group mb-3">
            <%= f.label :custom_attributes %>
            <%= f.text_area :custom_attributes, class: "form-control"%>
        </div>

        <div class="form-group mb-3">
                <%= f.label :user_id %>
                <%= f.collection_select :user_id, User.all, :id, :name, {prompt: "Select a User"}, {class: "form-control"} %>
        </div>

        <div class="form-group mb-3">
                <%= f.label :asignee_task_id %>
                <%= f.collection_select :asignee_task_id, User.all, :id, :name, {prompt: "Select a User"}, {class: "form-control"} %>
        </div>
        
        <% if @state.present? %>
            <%= f.hidden_field :state_id, value: @state.id%>
        <% else %>
            <div class="form-group mb-3">
                <%= f.label :state_id %>
                <%= f.collection_select :state_id, State.all, :id, :name, {prompt: "Select a State"}, {class: "form-control"} %>
            </div>
        <% end %>
        <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
</div>
