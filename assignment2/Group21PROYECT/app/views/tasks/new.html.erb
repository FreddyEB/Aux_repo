<% if @state.present?%>
<h1><strong><%= @state.name %></strong></h1>
  <h2>Create a new Task for this state: </h2>
  <%= render "form", task: @task %>
  <br>

  <div>
    <div class="container-l" style='margin: 30px'>
        <%= link_to "Back to tasks", tasks_path, class: "btn btn-warning" %>
    </div>
  </div>
<% else%>

<div class="container-l" style='margin: 10px'>
    <h1>Create a New Task!</h1>
</div>


<%= render "form", task: @task %>
<div class="container-l" style='margin: 10px'>
<%= link_to "Back to tasks", tasks_path, class: "btn btn-info"%>
</div>


<% end %>
