<div class="container-l" style='margin: 30px'>
    <%= form_with(model: user) do |f| %>
        <div class="form-group mb-3">
            <%= f.label :name %>
            <%= f.text_area :name, class: "form-control", required: true %>
        </div>
        <div class="form-group mb-3">
            <%= f.label :email %>
            <%= f.text_area :email, class: "form-control", required: true %>
        </div>
        <div class="form-group mb-3">
            <%= f.label :password %>
            <%= f.password_field :password, placeholder: "Password must at least be 6 characters long", class: "form-control", required: true %>
        </div>
        
        <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
</div>
