<div class="container">
  <div class="jumbotron text-center">
    <h1>Welcome to TrelloClone's Homepage</h1>
    <p class="lead">Here are the recent boards:</p>
  </div>
  
  <div class="row">
    <% @recent_boards.each do |board| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= link_to board.title, board_path(board) %></h5>
            <p class="card-text"><%= board.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
